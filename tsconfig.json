{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "dist",
    "sourceMap": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": true,
    "module": "ESNext",
    "target": "ESNext",
    "lib": ["dom", "es5", "scripthost", "es2016"],
    "moduleResolution": "node"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"],
  "typedocOptions":{
    "out": "docs",
    "json": "docs/docs.json",
    "entryPoints": ["src/squatch.ts"],
    "excludePrivate": true,
    "excludeProtected": true
  }
}
